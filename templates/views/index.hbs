<html lang="en">
    <head>
        <title>{{title}}</title>
        <link rel="stylesheet" href="/css/styles.css"/>
         <link rel="icon" href="/img/weather.png"> <!-- static path for public folder is already set in app.js -->
    </head>
    <body>
        <div class="main-content">
            {{>header}}
            <article class="widget">
                <form class="weatherLocation">
                <input type = "text" placeholder="location..." >
                <button value= "key1">Search</button>
                <button value="key2">Current Location</button>
                </form>
                <div class="weatherIcon"><i class="wi wi-day-cloudy"></i></div>
                <div class="weatherInfo">
                    <div class="Temperature"><span></span></div>
                    <div class="description">    
                        <div class="Forecast"></div>    
                        <div class="Location"></div>
                    </div>
                </div>
                <div class="date">
                    <div class="time"></div>
                    <div class="dates"></div>
                </div>
            </article>
        </div>
       <!-- absolute path -->                                                                                                                                                        
        <script src="JS/app.js"></script> 
    </body>
</html>
